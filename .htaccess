RewriteEngine On
RewriteBase /

# No responder OPTIONS aquí; dejamos que PHP lo haga para incluir headers CORS
# (quita cualquier Header ... aquí si ya manejas CORS en PHP)

# Redirigir todo al index.php (excepto archivos existentes)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]